pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'divine2200/java-calculator-app'
        DOCKER_CREDENTIALS_ID = 'docker-creds'
    }

    stages {
        stage('Clone') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/Divine-Yawson/JavaWeb3.git'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh 'docker build -t ${DOCKER_IMAGE}:latest .'
                }
            }
        }

        stage('Docker Push') {
            steps
