pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'divine2200/java-calculator-app'
        DOCKER_CREDENTIALS_ID = 'docker-creds' // Credentials docker
    }

    stages {
        // clone Repo
        stage('clone') {
            steps {
                git branch: 'master'
                        url: 'https://github.com/Divine-Yawson/JavaWeb3.git'
            }
        }
    }

    // Build Docker Images
    stage('Docker Build') {
        steps {
            script {
                sh 'docker build -t ${DOCKER_IMAGE}:latest .'
            }
        }   
    }

    // Push to Docker Hub
    stage('DOCKER pUSH') {
        steps {
            script {
                docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                docker.image("${DOCKER_IMAGE}:latest").push()}
                }
            }
        }
    }

    // Deploy Docker Container(use port 8000 to avoid Jenkins conflict)
        stage('Run Container') {
            steps {
                script {
                    //stop existing container using same image
                    sh """
                        docker ps -q --filter ancester=${DOCKER_IMAGE}:latest | xargs -r docker stop
                        docker ps -q --filter ancester=${DOCKER_IMAGE}:latest | xargs -r docker rm
                        docker run -d -p 8000:8080 ${DOCKER_IMAGE}:latest
                   """
                }
            }
        }

        post {
            succes {
                echo "Pipeline succeeded! App should be running on port 8000"
            }
            failuer {
                echo " Pipeline failed! Check logs for errors."
            }
        }
